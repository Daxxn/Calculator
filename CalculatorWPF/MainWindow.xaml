		<Border Grid.Row="2" Grid.Column="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!--Numeric Buttons-->
				<Border Grid.Column="0" Grid.ColumnSpan="2">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Button
							Name="Button_7"
							Content="7"
							Click="Button_IN_Click"
							Grid.Column="0"
							Grid.Row="0"
						/>
						<Button
							Name="Button_8"
							Content="8"
							Click="Button_IN_Click"
							Grid.Column="1"
							Grid.Row="0"
						/>
						<Button
							Name="Button_9"
							Content="9"
							Click="Button_IN_Click"
							Grid.Column="2"
							Grid.Row="0"
						/>

						<Button
							Name="Button_4"
							Content="4"
							Click="Button_IN_Click"
							Grid.Column="0"
							Grid.Row="1"
						/>
						<Button
							Name="Button_5"
							Content="5"
							Click="Button_IN_Click"
							Grid.Column="1"
							Grid.Row="1"
						/>
						<Button
							Name="Button_6"
							Content="6"
							Click="Button_IN_Click"
							Grid.Column="2"
							Grid.Row="1"
						/>

						<Button
							Name="Button_1"
							Content="1"
							Click="Button_IN_Click"
							Grid.Column="0"
							Grid.Row="2"
						/>
						<Button
							Name="Button_2"
							Content="2"
							Click="Button_IN_Click"
							Grid.Column="1"
							Grid.Row="2"
						/>
						<Button
							Name="Button_3"
							Content="3"
							Click="Button_IN_Click"
							Grid.Column="2"
							Grid.Row="2"
						/>

						<Button
							Name="Button_0"
							Content="0"
							Click="Button_IN_Click"
							Grid.Column="0"
							Grid.Row="3"
							Grid.ColumnSpan="2"
						/>
						<Button
							Name="Button_Decimal"
							Content="."
							FontSize="28"
							Click="Button_IN_Click"
							Grid.Column="2"
							Grid.Row="3"
						/>
					</Grid>
				</Border>

				<Border Grid.Column="2">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<!--#region ::Operator Buttons::-->
						<Button Name="Button_Add" Content="+" FontSize="28" Click="Button_IN_Click" Grid.Row="0"/>
						<Button Name="Button_Sub" Content="-" FontSize="28" Click="Button_IN_Click" Grid.Row="1"/>
						<Button Name="Button_Mul" Content="*" FontSize="28" Click="Button_IN_Click" Grid.Row="2"/>
						<Button Name="Button_Div" Content="/" FontSize="28" Click="Button_IN_Click" Grid.Row="3"/>
						<!--#endregion-->
					</Grid>
				</Border>

				<Border Grid.Column="3">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<Button Name="Button_Test" Content="Test" Click="Button_Test_Click" Grid.Row="0"  DataContext="{Binding Path=Key.enter}"/>
						<Button Name="Button_ClearALL" Content="CA" Click="Button_CA_Click" Grid.Row="1"/>
						<Button Name="Button_Back" Content="Bsp" Click="Button_Back_Click" Grid.Row="2"/>
						<Button Name="Button_Clear" Content="Clear" Click="Button_Clear_Click" Grid.Row="3"/>
						<Button Name="Button_Enter" Content="Enter" Click="Button_Enter_Click" Grid.Row="4" />
					</Grid>
				</Border>
			</Grid>
		</Border>
		
		
